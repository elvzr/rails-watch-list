<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white p-4">
        <h3>Add a movie to your list</h3>
        <%= simple_form_for [@list, @bookmark], url: list_bookmarks_path(@list) do |f| %>
          <%= f.input :comment, placeholder: 'Say something about it' %>
          <%= f.association :movie, prompt: 'Choose a movie', input_html: { class: 'select' } %>
          <%= f.submit class: 'btn btn-outline-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
