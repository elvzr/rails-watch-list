<div class="banner" style="background-image: url(https://images.unsplash.com/photo-1536440136628-849c177e76a1)">
  <div class="container">
    <h1>Curate lists of your favourite movies</h1>
    <p>
      <span id="banner-typed-text"></span>
      <%= link_to '+ New List', new_list_path(@list) %>
    </p>
  </div>
</div>

<div class="container-list">
  <div class="list-text">
    <h3>My Lists</h3>
    <% @lists.each do |list| %>
      <li style="background-image: url(https://images.unsplash.com/photo-1536440136628-849c177e76a1);">
        <%= link_to list.name, list_path(list) %>
      </li>
    <% end %>
    <%= link_to '+ New List', new_list_path(@list), class: "btn btn-success" %>
  </div>
</div>
